@model IvNav.Store.Identity.Web.ViewModels.Account.SignInViewModel

<h1>Login</h1>

<form asp-controller="Account" asp-action="Login" method="post">
    <div class="form-group">

        <input type="hidden" asp-for="ReturnUrl" />

        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input class="form-control" id="email" asp-for="Email" placeholder="example@gmail.com" />
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input class="form-control" id="password" type="password" asp-for="Password" placeholder="Password" />
        </div>
        <div class="form-group">
            <div class="form-check mt-2 mb-2">
                <input class="form-check-input" asp-for="RememberMe">
                <label class="form-check-label" asp-for="RememberMe">
                    Remember me
                </label>
            </div>
        </div>

        <div class="form-footer mt-2 mb-2">
            <button class="btn btn-primary" value="login">Login</button>
        </div>

        <partial name="_ValidationSummary" />

        <partial name="_ExternalLogin" />
    </div>

</form>
