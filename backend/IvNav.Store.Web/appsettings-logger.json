{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "NLog": {
    //"clearProviders": true,
    "autoReload": true,
    "throwConfigExceptions": true,
    "variables": {
      "var_logDir": "D:/app/logs/IvNav/",
      "var_fileNameTemplate": "${shortDate}.${machineName}.${processId}",
      "var_templateLogs": "${longDate}|${uppercase:${level}}|${gdc:item=IpAddress}|${message}|",
      "var_logLifeTimeInDays": 30
    },
    "targets": {
      "logFile": {
        "type": "File",
        "fileName": "${var_logDir}/log/${var_fileNameTemplate}.log",
        "layout": "${var_templateLogs}",
        "maxArchiveDays": "${var_logLifeTimeInDays}",
        "keepFileOpen": false
      },
      "logFileError": {
        "type": "File",
        "fileName": "${var_logDir}/error/${var_fileNameTemplate}.error",
        "layout": "${var_templateLogs}",
        "maxArchiveDays": "${var_logLifeTimeInDays}",
        "keepFileOpen": false
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "maxLevel": "Info",
        "writeTo": "logFile"
      },
      {
        "logger": "*",
        "minLevel": "Warn",
        "maxLevel": "Fatal",
        "writeTo": "logFileError"
      }
    ]
  }
}